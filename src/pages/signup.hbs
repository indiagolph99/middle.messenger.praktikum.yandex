{{!< nonchat }}
{{#extend 'form/form' formTitle='Sign up' buttonText='Sign up' linkText='Log in' }}
    {{#content "main"}}
        {{> 'input/input' name='email' type='email' placeholder='Email' }}
        {{> 'input/input' name='login' type='text' placeholder='Login' }}
        {{> 'input/input' name='first_name' type='text' placeholder='First name' }}
        {{> 'input/input' name='last_name' type='text' placeholder='Last name' }}
        {{> 'input/input' name='phone' type='tel' placeholder='Phone' }}
        {{> 'input/input' name='password' type='password' placeholder='Password' }}
        {{> 'input/input' name='repeat_password' type='password' placeholder='Repeat password' }}
    {{/content}}
{{/extend}}
